{% extends 'DynamicMenuBundle::layout.html.twig' %}

{% block page_title %}Menus{% endblock %}

{% block content %}
    <a href="{{ path('dynamic_menu_admin_menu_add') }}" class="btn btn-success btn-sm">
        <span class="glyphicon glyphicon-plus"></span>
        <strong>Create Menu</strong>
    </a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>
                    <a href="{{ path('dynamic_menu_admin_menu_item_list', {'menu': menu.name}) }}">
                        {{ menu.label }}
                    </a>
                </td>
                <td>
                    <span class="{{ menu.isEnabled ? 'glyphicon glyphicon-ok' : '' }}"></span>
                </td>
                <td>
                    <div class="btn-group">
                        <a title="List items" href="{{ path('dynamic_menu_admin_menu_item_list', {'menu': menu.name}) }}" class="btn btn-info btn-sm">
                            <span class="glyphicon glyphicon-th-list"></span>
                            <span class="text-hide">List terms</span>
                        </a>
                        <a title="Edit"
                           href="{{ path('dynamic_menu_admin_menu_edit', {'menu': menu.name}) }}"
                           class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a title="Delete"
                           href="{{ path('dynamic_menu_admin_menu_delete', {'menu': menu.name}) }}"
                           class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
